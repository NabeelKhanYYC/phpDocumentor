<?xml version="1.0" encoding="utf-8"?>
<template>
  <author>@NabeelKhanYYC</author>
  <email>phpdocumentor@n45337.net</email>
  <version>1.0.0</version>
  <copyright>Nabeel Khan</copyright>
  <description>Template to generate an index of the files and line numbers for code so that it can be more easily used by AI coding tools like claude to reduce token usage.</description>
  <transformations>
    <transformation query="copy" writer="FileIo" source="templates/index/readme.md" artifact="readme.md"/>
    <transformation writer="twig" source="templates/index/index.twig" artifact="index.txt"/>
    <transformation writer="twig" query="files" source="templates/index/file.twig" artifact="index/{{path}}.txt"/>
  </transformations>
</template>
